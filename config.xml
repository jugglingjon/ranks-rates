<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bah.navyranksapp"
        versionCode = "10" 
        version     = "1.98" >

    <!-- versionCode is optional and Android only -->

    <name>US Military Rank and Reference</name>

    <description>
        Tool created by NETC to aid recruits with distinguishing rates and ranks.
    </description>

    <author href="http://www.boozallen.com" email="cronin_jonathan@bah.com">
        NETC - Naval Education Training Command
    </author>

    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
    <plugin name="cordova-plugin-screen-orientation" spec="2.0.1" source="npm" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" source="npm" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.3" source="npm" />




    <access origin="*"/>
    <allow-navigation href="*" />

    <preference name="permissions" value="none" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />

    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>


    <gap:splash src="splash.png" />

    <platform name="ios">
        
        <!-- ICONS -->
        <icon src="res/icons/ios/icon-small.png" width="29" height="29" platform="ios"/>
        <icon src="res/icons/ios/icon-small-2x.png" width="58" height="58" platform="ios"/>
        <icon src="res/icons/ios/icon-40.png" width="40" height="40" platform="ios"/>
        <icon src="res/icons/ios/icon-40-2x.png" width="80" height="80" platform="ios"/>
        <icon src="res/icons/ios/icon-50.png" width="50" height="50" platform="ios"/>
        <icon src="res/icons/ios/icon-50-2x.png" width="100" height="100" platform="ios"/>
        <icon src="res/icons/ios/icon.png" width="57" height="57" platform="ios"/>
        <icon src="res/icons/ios/icon-2x.png" width="114" height="114" platform="ios"/>
        <icon src="res/icons/ios/icon-60.png" width="60" height="60" platform="ios"/>
        <icon src="res/icons/ios/icon-60-2x.png" width="120" height="120" platform="ios"/>
        <icon src="res/icons/ios/icon-60-3x.png" width="180" height="180" platform="ios"/>
        <icon src="res/icons/ios/icon-72.png" width="72" height="72" platform="ios"/>
        <icon src="res/icons/ios/icon-72-2x.png" width="144" height="144" platform="ios"/>
        <icon src="res/icons/ios/icon-76.png" width="76" height="76" platform="ios"/>
        <icon src="res/icons/ios/icon-76-2x.png" width="152" height="152" platform="ios"/>
        
        <!-- PHONE PORTRAIT -->
        <splash src="res/screens/ios/screen-iphone-portrait.png" width="320" height="480" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-portrait-2x.png" width="640" height="960" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-portrait-667h.png" width="750" height="1334" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-portrait-736h.png" width="1242" height="2208" platform="ios"/>

        <!-- PHONE LANDSCAPE -->
        <splash src="res/screens/ios/screen-iphone-landscape.png" width="480" height="320" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-landscape-2x.png" width="960" height="640" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-landscape-568h-2x.png" width="1136" height="640" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-landscape-667h.png" width="1334" height="750" platform="ios"/>
        <splash src="res/screens/ios/screen-iphone-landscape-736h.png" width="2208" height="1242" platform="ios"/>

        <!-- TABLET PORTRAIT -->
        <splash src="res/screens/ios/screen-ipad-portrait.png" width="768" height="1024" platform="ios"/>
        <splash src="res/screens/ios/screen-ipad-portrait-2x.png" width="1536" height="2048" platform="ios"/>

        <!-- TABLET LANDSCAPE -->
        <splash src="res/screens/ios/screen-ipad-landscape.png" width="1024" height="768" platform="ios"/>
        <splash src="res/screens/ios/screen-ipad-landscape-2x.png" width="2048" height="1536" platform="ios"/>
    </platform>

    <platform name="android">
        <!-- ICONS -->
        <icon qualifier="ldpi" src="res/icons/android/icon-36-ldpi.png" platform="android"/>
        <icon qualifier="mdpi" src="res/icons/android/icon-48-mdpi.png" platform="android"/>
        <icon qualifier="hdpi" src="res/icons/android/icon-72-hdpi.png" platform="android"/>
        <icon qualifier="xhdpi" src="res/icons/android/icon-96-xhdpi.png" platform="android"/>
        <icon qualifier="xxhdpi" src="res/icons/android/icon-144-xxhdpi.png" platform="android"/>
        <icon qualifier="xxxhdpi" src="res/icons/android/icon-192-xxxhdpi.png" platform="android"/>

        <!-- PORTRAIT -->
        <splash qualifier="port-ldpi" src="res/screens/android/screen-ldpi-portrait.png" platform="android"/>
        <splash qualifier="port-mdpi" src="res/screens/android/screen-mdpi-portrait.png" platform="android"/>
        <splash qualifier="port-hdpi" src="res/screens/android/screen-hdpi-portrait.png" platform="android"/>
        <splash qualifier="port-xhdpi" src="res/screens/android/screen-xhdpi-portrait.png" platform="android"/>
        <splash qualifier="port-xxhdpi" src="res/screens/android/screen-xxhdpi-portrait.png" platform="android"/>
        <splash qualifier="port-xxxhdpi" src="res/screens/android/screen-xxxhdpi-portrait.png" platform="android"/>

        <!-- LANDSCAPE -->
        <splash qualifier="land-ldpi" src="res/screens/android/screen-ldpi-landscape.png" platform="android"/>
        <splash qualifier="land-mdpi" src="res/screens/android/screen-mdpi-landscape.png" platform="android"/>
        <splash qualifier="land-hdpi" src="res/screens/android/screen-hdpi-landscape.png" platform="android"/>
        <splash qualifier="land-xhdpi" src="res/screens/android/screen-xhdpi-landscape.png" platform="android"/>
        <splash qualifier="land-xxhdpi" src="res/screens/android/screen-xxhdpi-landscape.png" platform="android"/>
        <splash qualifier="land-xxxhdpi" src="res/screens/android/screen-xxxhdpi-landscape.png" platform="android"/>
    </platform>


    
</widget>